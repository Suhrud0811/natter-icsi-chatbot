# =============================================================================
# ICSI Chatbot Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and will not be committed

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Your OpenAI API key (required)
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL - MODEL CONFIGURATION
# =============================================================================

# GPT model to use for chat responses
# Options: gpt-4o-mini, gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Default: gpt-4o-mini (recommended for cost-effectiveness)
OPENAI_MODEL=gpt-4o-mini

# Embedding model for semantic search
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
# Default: text-embedding-3-small (recommended)
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# OPTIONAL - CHUNKING SETTINGS
# =============================================================================

# Size of text chunks in tokens (affects context per retrieval)
# Larger = more context per chunk, slower search
# Smaller = less context per chunk, faster search
# Default: 512
CHUNK_SIZE=512

# Overlap between chunks in tokens (helps maintain context)
# Default: 50
CHUNK_OVERLAP=50

# =============================================================================
# OPTIONAL - RETRIEVAL SETTINGS
# =============================================================================

# Number of most relevant chunks to retrieve for each query
# Higher = more context for LLM, slower responses
# Lower = less context, faster responses
# Default: 5
SIMILARITY_TOP_K=5

# Maximum tokens to keep in conversation memory
# Higher = longer conversation history, more tokens used
# Default: 3000
CHAT_MEMORY_TOKEN_LIMIT=3000

# =============================================================================
# OPTIONAL - API SERVER SETTINGS
# =============================================================================

# Host for the API server
# 0.0.0.0 = accessible from any network interface
# 127.0.0.1 = localhost only
# Default: 0.0.0.0
API_HOST=0.0.0.0

# Port for the API server
# Default: 8000
API_PORT=8000

# =============================================================================
# OPTIONAL - FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in megabytes
# Default: 10
MAX_FILE_SIZE_MB=10

# Maximum number of files per upload request
# Default: 5
MAX_FILES_PER_UPLOAD=5

# Allowed file extensions (comma-separated)
# Default: .mrt
ALLOWED_FILE_TYPES=.mrt

# =============================================================================
# OPTIONAL - CLI SETTINGS
# =============================================================================

# URL of the API server for CLI client
# Default: http://localhost:8000
CLI_API_URL=http://localhost:8000

# Timeout for CLI API requests in seconds
# Default: 30
CLI_API_TIMEOUT=30

# =============================================================================
# OPTIONAL - METADATA SETTINGS
# =============================================================================

# Maximum length of notes to include in metadata
# Default: 500
NOTES_MAX_LENGTH=500
